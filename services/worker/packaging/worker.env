# /etc/edu-worker/worker.env
# =====================================================
# WORKER CONFIGURATION - NEW TOKEN MODEL
# =====================================================
# WORKER_TOKEN formats:
#   - "personal:<userId>"  -> For personal workspace (user's private files)
#   - "<workspaceId>"      -> For shared workspace (e.g., "EivTmk6OT4l660jWnhhD")
# =====================================================

NEXUS_URL=http://localhost:3010
WORKER_TOKEN=

# Firebase Storage Bucket (leave empty for default)
FIREBASE_BUCKET=

# Firebase Service Account (JSON string or leave empty to use file)
FIREBASE_SERVICE_ACCOUNT=

# Local mount path for workspace files
MOUNT_PATH=/var/lib/edu-worker/workspace

# Path to Firebase service account key file
SERVICE_ACCOUNT_PATH=/etc/edu-worker/serviceAccountKey.json

# Container settings
WORKER_IMAGE=ghcr.io/educacioncooperativa/worker:latest
CONTAINER_NAME=edu-worker
AUTO_PULL=0
