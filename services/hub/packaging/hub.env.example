# Hub Environment Configuration
# Copy this file to hub.env and fill in the values

PORT=3010
CLIENT_ORIGIN=https://your-vercel-app.vercel.app

# Firebase Admin credentials (choose one)
# Option A (recommended): path to service account file
GOOGLE_APPLICATION_CREDENTIALS=/etc/edu-hub/serviceAccountKey.json
# Option B: raw JSON string (not base64)
# FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n..."}'

FIREBASE_PROJECT_ID=your-project-id
WORKER_SECRET=<shared-secret-for-worker-auth>
