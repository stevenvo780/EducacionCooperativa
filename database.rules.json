{
  "rules": {
    "sync-events": {
      "$workspaceId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["timestamp"],
        "$eventId": {
          ".validate": "newData.hasChildren(['type', 'path', 'timestamp'])"
        }
      }
    },
    "presence": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}