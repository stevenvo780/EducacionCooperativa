rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is a sync-agent
    function isSyncAgent() {
      return request.auth != null && 
             request.auth.uid.matches('sync-agent:.*');
    }
    
    // Personal user storage: users/{userId}/...
    match /users/{userId}/{allPaths=**} {
      // User can access their own files
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Sync-agent for this user can also access
      allow read, write: if request.auth != null && 
                            request.auth.uid == 'sync-agent:' + userId;
    }
    
    // Shared workspace storage: workspaces/{workspaceId}/...
    match /workspaces/{workspaceId}/{allPaths=**} {
      // Members can access workspace files
      // Note: We can't check Firestore from Storage rules directly,
      // so we rely on the sync-agent having the correct workspaceId
      allow read, write: if request.auth != null;
      // Sync-agent for this workspace can access
      allow read, write: if request.auth != null && 
                            request.auth.uid == 'sync-agent:' + workspaceId;
    }
  }
}
